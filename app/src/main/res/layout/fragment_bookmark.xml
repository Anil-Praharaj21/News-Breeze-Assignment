<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bookmark_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_arrow_back_ios_24"
                style="@style/Theme.NewsBreeze.BackButtonIcon" />

            <TextView
                android:id="@+id/article_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_gravity="center"
                android:text="Saved"
                android:textColor="@color/primaryColor"
                style="@style/Theme.NewsBreeze.Headline6" />

        </FrameLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Theme.NewsBreeze.TextInputLayout"
            android:padding="@dimen/size_0dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_16dp"
            app:startIconDrawable="@drawable/ic_baseline_search_24"
            app:endIconDrawable="@drawable/ic_baseline_filter_list_24"
            app:endIconMode="custom"
            app:placeholderText="Search">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search"
                android:padding="@dimen/size_0dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_16dp"
            app:cardCornerRadius="@dimen/size_8dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/bookmark_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"/>

            <TextView
                android:id="@+id/no_data_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="No Data found"
                android:visibility="gone"
                style="@style/TextAppearance.MaterialComponents.Headline6" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>